require "rack/jekyll"
require "rack-rewrite" # optional

# (optional) Redirect www.example.com to example.com
use Rack::Rewrite do
  r301 %r{.*}, 'http://hdemon.net$&', :if => Proc.new { |rack_env| rack_env['SERVER_NAME'] != 'hdemon.net' }
end

# Use rack/jekyll to run the site on Heroku
run Rack::Jekyll.new